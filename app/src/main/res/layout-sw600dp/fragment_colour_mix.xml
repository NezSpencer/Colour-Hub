<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="60"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="#D9E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="30"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10">

                <android.support.v7.widget.CardView
                    xmlns:cardView="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    cardView:cardCornerRadius="0dp"
                    android:id="@+id/type_in_layout"
                    cardView:cardElevation="2dp"
                    android:paddingBottom="15dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="25dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:padding="4dp"
                            android:gravity="center"
                            android:text="Type in colour code in the box below to transform "
                            />

                        <EditText
                            android:layout_marginTop="20dp"
                            android:id="@+id/input_colour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:gravity="center_horizontal"
                            android:background="#D9E0E0E0"
                            android:hint="e.g #00bceeff "/>

                        <com.dd.CircularProgressButton
                            android:layout_marginTop="40dp"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/btnWithText"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:background="?attr/colorAccent"
                            app:cpb_colorIndicator="?attr/colorAccent"
                            app:cpb_textComplete="Rendered"
                            app:cpb_textError="Error"
                            app:cpb_textIdle="Render" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:padding="5dp"
                android:paddingBottom="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20">

                <android.support.v7.widget.CardView
                    xmlns:cardView="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    cardView:cardCornerRadius="0dp"
                    android:id="@+id/back_layout"
                    cardView:cardElevation="2dp"
                        >

                        <LinearLayout
                                android:id="@+id/fore_layout"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                />


                </android.support.v7.widget.CardView>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="25"
                android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="15"
                android:paddingRight="5dp"
                android:paddingEnd="5dp"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_marginTop="5dp"
                    xmlns:cardView="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    cardView:cardCornerRadius="0dp"
                    android:id="@+id/adjust_layout"
                    cardView:cardElevation="2dp"
                    android:paddingBottom="15dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="13dp"
                        android:paddingBottom="8dp"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="10"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_marginTop="7dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:text="A"/>
                            <SeekBar
                                android:layout_marginTop="2dp"
                                android:layout_weight="9"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/colorA" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="10"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_marginTop="7dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:text="R"/>
                            <SeekBar
                                android:layout_marginTop="2dp"
                                android:layout_weight="9"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/colorR" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="10"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_marginTop="7dp"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:text="G"/>
                            <SeekBar
                                android:layout_weight="9"
                                android:layout_marginTop="2dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/colorG" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="10"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_marginTop="7dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:text="B"/>
                            <SeekBar
                                android:layout_marginTop="2dp"
                                android:layout_weight="9"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/colorB" />

                        </LinearLayout>




                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:layout_marginTop="2dp"
                        xmlns:cardView="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        cardView:cardCornerRadius="0dp"
                        android:id="@+id/color_code_layout"
                        cardView:cardElevation="2dp"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:gravity="center"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:id="@+id/rgb_label"
                                android:layout_alignStart="@+id/argb_label"
                                android:layout_alignLeft="@+id/argb_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="30dp"
                                android:textSize="27sp"
                                android:text="RGB:"/>
                            <TextView
                                android:id="@+id/rgb_color"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:textIsSelectable="true"
                                android:layout_width="wrap_content"
                                android:text="#dd88cc99"
                                android:background="@drawable/text_background"
                                android:textStyle="bold"
                                android:textSize="25sp"
                                android:layout_alignParentTop="true"
                                android:layout_alignEnd="@+id/argb_color"
                                android:layout_alignRight="@+id/argb_color"
                                android:layout_alignStart="@+id/argb_color"
                                android:layout_alignLeft="@+id/argb_color"
                                android:layout_toRightOf="@+id/argb_label"
                                android:layout_toEndOf="@+id/argb_label" />

                            <TextView
                                android:id="@+id/argb_label"
                                android:layout_below="@+id/rgb_label"
                                android:layout_marginEnd="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/argb_color"
                                android:textSize="27sp"
                                android:text="ARGB:"/>

                            <TextView
                                android:id="@+id/argb_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_background"
                                android:textStyle="bold"
                                android:textIsSelectable="true"
                                android:textSize="25sp"
                                android:text="#dd88cc99"
                                android:padding="3dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_below="@+id/rgb_label"
                                android:layout_toRightOf="@+id/argb_label"
                                android:layout_toEndOf="@+id/argb_label" />

                            <!--<TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Choose Background Color"
                                android:textSize="20sp"
                                android:id="@+id/textView"
                                android:layout_below="@+id/argb_color"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="59dp"
                                android:layout_alignRight="@+id/argb_color"
                                android:layout_alignEnd="@+id/argb_color" />

                            <Spinner
                                android:id="@+id/spinner"
                                android:layout_width="170dp"
                                android:tag="Choose background"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/textView"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />-->


                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</LinearLayout>
