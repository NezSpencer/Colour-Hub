<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingEnd="0dp"
    android:paddingRight="0dp"
    android:layout_gravity="center"
    android:paddingStart="0dp"
    android:gravity="center_horizontal"
    android:paddingBottom="3dp"
    android:layout_margin="20dp"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="350dp">

    <Button
            android:id="@+id/discard"
            android:text="discard"
            android:layout_alignStart="@+id/imagePreview"
            android:layout_alignLeft="@+id/imagePreview"
            android:layout_alignEnd="@+id/imagePreview"
            android:layout_alignRight="@+id/imagePreview"
            android:textColor="@color/white"
            android:background="@color/red_850"
            android:layout_width="match_parent"
            android:layout_weight="0.08"
            android:layout_height="40dp"/>
    <LinearLayout
        android:id="@+id/imagePreview"
        android:padding="0dp"
        android:layout_below="@+id/discard"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:layout_alignStart="@+id/imagePreview"
        android:layout_alignLeft="@+id/imagePreview"
        android:layout_alignEnd="@+id/imagePreview"
        android:layout_alignRight="@+id/imagePreview"
        android:layout_below="@+id/imagePreview"
        android:orientation="horizontal">

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/preview_colour_code"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:textSize="20sp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:text="colour code"
            android:textIsSelectable="true"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="#dadada"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/previewColor"
            android:layout_width="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:layout_height="48dp"
            android:layout_toEndOf="@+id/preview_colour_code"
            android:layout_toRightOf="@+id/preview_colour_code"
            />
    </RelativeLayout>






</RelativeLayout>