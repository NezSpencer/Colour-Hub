<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="#D9E0E0E0"
    android:scrollbars="none">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="40dp"

            >

            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                xmlns:cardView="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/back_layout"
                cardView:cardCornerRadius="0dp"
                cardView:cardElevation="2dp"
                cardView:cardBackgroundColor="#fdc8de00"
                >


                    <LinearLayout
                        android:id="@+id/fore_layout"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="3dp"
                xmlns:cardView="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cardView:cardCornerRadius="0dp"
                android:id="@+id/type_in_layout"
                cardView:cardElevation="2dp"
                android:paddingBottom="15dp"
                >
                <RelativeLayout
                    android:id="@+id/render_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="20sp"
                        android:layout_centerVertical="true"
                        android:id="@+id/input_colour"
                        android:gravity="center_horizontal"
                        android:background="#D9E0E0E0"
                        android:hint="color e.g #123456"/>

                    <com.dd.CircularProgressButton
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/btnWithText"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="?attr/colorAccent"
                        app:cpb_colorIndicator="?attr/colorAccent"
                        app:cpb_textComplete="Rendered"
                        app:cpb_textError="Error"
                        app:cpb_textIdle="Render" />



                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="3dp"
                xmlns:cardView="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cardView:cardCornerRadius="0dp"
                android:id="@+id/adjust_layout"
                cardView:cardElevation="2dp"
                android:paddingBottom="15dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="13dp"
                    android:paddingBottom="8dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="A"/>
                        <SeekBar
                            android:layout_marginTop="2dp"
                            android:layout_weight="7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/colorA" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="R"/>
                        <SeekBar
                            android:layout_marginTop="2dp"
                            android:layout_weight="7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/colorR" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="G"/>
                        <SeekBar
                            android:layout_weight="7"
                            android:layout_marginTop="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/colorG" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="B"/>
                        <SeekBar
                            android:layout_marginTop="2dp"
                            android:layout_weight="7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/colorB" />

                    </LinearLayout>




                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="2dp"
                xmlns:cardView="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                cardView:cardCornerRadius="0dp"
                android:id="@+id/color_code_layout"
                cardView:cardElevation="2dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rgb_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="20sp"
                        android:text="RGB:"/>
                    <TextView
                        android:id="@+id/rgb_color"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textIsSelectable="true"
                        android:layout_width="wrap_content"
                        android:text="#dd88cc99"
                        android:background="@drawable/text_background"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignEnd="@+id/argb_color"
                        android:layout_alignRight="@+id/argb_color"
                        android:layout_alignStart="@+id/argb_color"
                        android:layout_alignLeft="@+id/argb_color"
                        android:layout_toRightOf="@+id/argb_label"
                        android:layout_toEndOf="@+id/argb_label" />

                    <TextView
                        android:id="@+id/argb_label"
                        android:layout_below="@+id/rgb_label"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/argb_color"
                        android:textSize="20sp"
                        android:text="ARGB:"/>

                    <TextView
                        android:id="@+id/argb_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_background"
                        android:textStyle="bold"
                        android:textIsSelectable="true"
                        android:textSize="20sp"
                        android:text="#dd88cc99"
                        android:padding="3dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_below="@+id/rgb_label"
                        android:layout_toRightOf="@+id/argb_label"
                        android:layout_toEndOf="@+id/argb_label" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

