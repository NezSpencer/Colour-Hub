<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imagePreview"
            android:layout_below="@+id/discard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/discard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="70dp"
            android:layout_gravity="end"
            android:background="@drawable/button_discard"
            android:layout_alignStart="@+id/imagePreview"
            android:layout_alignLeft="@+id/imagePreview"
            android:layout_alignEnd="@+id/imagePreview"
            android:layout_alignRight="@+id/imagePreview"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:minHeight="50dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignStart="@+id/imagePreview"
        android:layout_alignLeft="@+id/imagePreview"
        android:layout_alignEnd="@+id/imagePreview"
        android:layout_alignRight="@+id/imagePreview"
        android:orientation="horizontal"
        android:layout_below="@+id/imagePreview"
        android:background="#dadada"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/preview_colour_code"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="20sp"
            android:minHeight="40dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/previewColor"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:minHeight="40dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>